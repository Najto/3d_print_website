server {
    listen 80;
    server_name localhost;

    root /var/www/aos-collection;
    index index.html;

    # Gzip Compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/xml+rss application/json;

    # Global Passwort-Schutz (ausgenommen API + Dateien)
    auth_basic "AoS Collection - Anmeldung erforderlich";
    auth_basic_user_file /etc/nginx/.htpasswd;

    # üîÅ API - ohne Passwortschutz, an Express-Backend
    location /api {
        auth_basic off;
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # Optional: Upload-Handling
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        client_max_body_size 100M;
    }

    # üóÇÔ∏è Datei-Downloads - auch ohne Passwort
    location /files {
        auth_basic off;
        alias /var/www/aos-collection/public/files;

        # Nur erlaubte Dateitypen zulassen
        location ~* \.(stl|jpg|jpeg|png|gif|webp)$ {
            expires 1y;
            add_header Cache-Control "public";
        }

        # Verbotene Dateitypen
        location ~* \.(php|pl|py|jsp|asp|sh|cgi)$ {
            deny all;
        }
    }

    # üß† React-Frontend: statische Dateien
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # üåê Frontend SPA (React Router) ‚Äì greift nur, wenn keine statische Datei gefunden wurde
    location / {
        try_files $uri $uri/ @fallback;
    }

    # SPA-Fallback f√ºr React
    location @fallback {
        rewrite ^.*$ /index.html last;
    }

    # üîç Health-Check ‚Äì direkt an Backend weiterleiten
    location /health {
        auth_basic off;
        proxy_pass http://localhost:3001/api/health;
        access_log off;
    }

    # üîí Schutz sensibler Dateien
    location ~ /\. {
        deny all;
    }

    location ~ /(package\.json|server|src|node_modules) {
        deny all;
    }
}
