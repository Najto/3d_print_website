server {
    listen 80;
    server_name localhost;
    
    root /var/www/aos-collection;
    index index.html;
    
    # Gzip Compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/xml+rss application/json;
    
    # Passwort-Schutz f端r die Website (NICHT f端r API)
    auth_basic "AoS Collection - Anmeldung erforderlich";
    auth_basic_user_file /etc/nginx/.htpasswd;
    
    # Frontend - Serve React app
    location / {
        try_files $uri $uri/ @fallback;
    }
    
    # Fallback for React Router
    location @fallback {
        rewrite ^.*$ /index.html last;
    }
    
    # Backend API - OHNE Passwort-Schutz f端r interne Kommunikation
    location /api {
        auth_basic off;  # API-Zugriff ohne Passwort
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Increase timeout for file uploads
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        client_max_body_size 100M;
    }
    
    # Serve uploaded files - OHNE Passwort-Schutz f端r Downloads
    location /files {
        auth_basic off;  # Datei-Downloads ohne Passwort
        alias /var/www/aos-collection/public/files;
        
        # Security: Only allow specific file types
        location ~* \.(stl|jpg|jpeg|png|gif|webp)$ {
            expires 1y;
            add_header Cache-Control "public";
        }
        
        # Deny access to other file types
        location ~* \.(php|pl|py|jsp|asp|sh|cgi)$ {
            deny all;
        }
    }
    
    # Cache static assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # Health check endpoint - OHNE Passwort-Schutz
    location /health {
        auth_basic off;
        proxy_pass http://localhost:3001/api/health;
        access_log off;
    }
    
    # Deny access to sensitive files
    location ~ /\. {
        deny all;
    }
    
    location ~ /(package\.json|server|src|node_modules) {
        deny all;
    }
}